<%- include("partials/header.ejs") %>

    <%if(blogs.length!==0){%>
        <%for(var i=0;i<blogs.length;i++){%>
            
                <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
                    <div class="col-lg-6 px-0">
                        <h1 class="display-4 fst-italic"><%=blogs[i].title%></h1>
                        <p class="lead my-3"><%=blogs[i].content%></p>
                    
                    </div>
                </div>
                <form action="/delete/<%= i %>" method="POST">
                    <button type="submit" class="btn btn-outline-danger btn-sm" class="login">Delete</button>
                  </form>
                  
        <%}%>
    <%}%>
    <%if(blogs.length===0){%>
        <div class="p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
            <div class="col-lg-6 px-0">
                <h1 class="display-4 fst-italic">Write a blog first.</h1>
                
            
            </div>
        </div>
   <% }%>
 
<%- include("partials/footer.ejs") %>